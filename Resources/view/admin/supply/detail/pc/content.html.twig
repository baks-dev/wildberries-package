{% trans_default_domain('wildberries-package.supply') %}


<main class="main d-print-none">


    <section class="container px-4 mb-5">

        <div class="mt-3 d-flex justify-content-between">
            {{ include(_self|replace({ "content.html.twig": "_breadcrumb.html.twig" })) }}
        </div>


        <div class="d-flex justify-content-between align-items-center mb-3 gap-3">

            <div class="w-100 d-flex gap-3 align-items-center">
                <h1 class="h4 text-uppercase fw-bolder mb-0">
                    Детали поставки <span class="text-muted">{{ supply.identifier }}</span>
                </h1>

            </div>


            <a href="{{ path('wildberries-package:admin.package.index') }}"
               class="btn btn-light"
               role="tooltip"
               data-bs-toggle="tooltip"
               data-bs-placement="bottom"
               data-bs-delay='{"show":600,"hide":100}'
               title="{{ 'breadcrumb.index'|trans({}, 'wildberries-package.package') }}"
            >
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-boxes"
                     viewBox="0 0 16 16">
                    <path d="M7.752.066a.5.5 0 0 1 .496 0l3.75 2.143a.5.5 0 0 1 .252.434v3.995l3.498 2A.5.5 0 0 1 16 9.07v4.286a.5.5 0 0 1-.252.434l-3.75 2.143a.5.5 0 0 1-.496 0l-3.502-2-3.502 2.001a.5.5 0 0 1-.496 0l-3.75-2.143A.5.5 0 0 1 0 13.357V9.071a.5.5 0 0 1 .252-.434L3.75 6.638V2.643a.5.5 0 0 1 .252-.434L7.752.066ZM4.25 7.504 1.508 9.071l2.742 1.567 2.742-1.567L4.25 7.504ZM7.5 9.933l-2.75 1.571v3.134l2.75-1.571V9.933Zm1 3.134 2.75 1.571v-3.134L8.5 9.933v3.134Zm.508-3.996 2.742 1.567 2.742-1.567-2.742-1.567-2.742 1.567Zm2.242-2.433V3.504L8.5 5.076V8.21l2.75-1.572ZM7.5 8.21V5.076L4.75 3.504v3.134L7.5 8.21ZM5.258 2.643 8 4.21l2.742-1.567L8 1.076 5.258 2.643ZM15 9.933l-2.75 1.571v3.134L15 13.067V9.933ZM3.75 14.638v-3.134L1 9.933v3.134l2.75 1.571Z"/>
                </svg>
            </a>

            <a
                    href="{{ path('wildberries-package:admin.supply.index') }}"
                    class="btn btn-light"
                    role="tooltip"
                    data-bs-toggle="tooltip"
                    data-bs-placement="bottom"
                    data-bs-delay='{"show":600,"hide":100}'
                    title="{{ 'breadcrumb.index'|trans({}, 'wildberries-package.supply') }}"
            >
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor"
                     class="bi bi-card-checklist" viewBox="0 0 16 16">
                    <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                    <path d="M7 5.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0zM7 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 0 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0z"/>
                </svg>
            </a>

            {# <div>
                <a href="{{ path('manufacture-part:admin.newedit.new') }}"
                   class="btn modal-btn modal-link disabled btn-primary text-nowrap" data-bs-toggle="modal"
                   data-bs-target="#modal"
                   title="Открыть поставку">
                    Добавить партию
                </a>
            </div> #}
        </div>


        {{ include(_self|replace({ "content.html.twig": "supply.html.twig" })) }}

        <div class="border border-light rounded-4 p-3 mb-3">

            <div class="d-flex justify-content-between">

                {% include Template('/_includes/'~baks_settings.device~'/search.html.twig') %}

                <div class="w-100 d-flex">

                    {# Print #}
                    <div class="d-flex me-2">
                    {{ form_start(supplyOrdersFilter) }}

                    <div class="w-100 d-flex gap-2 justify-content-end">


                        {# Print #}
                        <div>
                            <div class="d-flex justify-content-around radio-buttons clearfix"
                                 data-buttons="true"
                                 style="clear: both"
                            >
                                <label class="btn px-2 py-1 mt-1 border-dotted rounded-3 w-100 {{ supplyOrdersFilter.print.vars.data ? 'active' }}">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1">

                                            <div class="d-flex align-items-center">
                                                {{ form_widget(supplyOrdersFilter.print, { label: false }) }}
                                                <div class="form-check ps-0 text-nowrap">
                                                    {{ 'Печать выполнена'|trans }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </label>
                            </div>

                        </div>

                    </div>

                    {{ form_end(supplyOrdersFilter) }}
                    </div>



                    {{ form_start(filter) }}
                    <div class="d-flex justify-content-end align-items-center my-1 gap-3">


                        <div class="w-75">
                            {{ form_widget(filter.category, { placeholder: 'Все категории ...', attr: { 'data-select' : 'select2', class: 'mb-0' } }) }}
                        </div>

                        {% if filter.vars.data.category %}

                            {% if filter.offer is defined %}

                                <div class="w-25">
                                    {{ form_widget(filter.offer, { placeholder: filter.offer.vars.label~' ...' , attr: { 'data-select' : 'select2', class: 'mb-0' } }) }}
                                </div>
                            {% endif %}


                            {% if filter.variation is defined %}
                                <div class="w-25">
                                    {{ form_widget(filter.variation, { placeholder: filter.variation.vars.label~' ...', attr: { 'data-select' : 'select2', class: 'mb-0' } }) }}
                                </div>
                            {% endif %}

                            {% if filter.modification is defined %}
                                <div class="w-25">
                                    {{ form_widget(filter.modification, { placeholder:  filter.modification.vars.label~' ...', attr: { 'data-select' : 'select2', class: 'mb-0' } }) }}
                                </div>
                            {% endif %}

                        {% endif %}

                    </div>
                    {{ form_end(filter) }}


                </div>

            </div>

            <div class="row cards-box-body mt-3">
                {% for item in query.data %}
                    {{ include(_self|replace({ "content.html.twig": "card.html.twig" })) }}
                {% endfor %}
            </div>

        </div>

        {% if query.data %}

            <div class="position-absolute mt-2 pt-1 small">
                <strong class="">Множественный выбор:</strong>
            </div>

            <div class="to-print-actions d-flex gap-2 sticky-bottom ps-5 pb-3 pt-2 z-1"
                 style="margin-left: 130px; max-width: 100px;">

                <button
                        class="btn btn-sm btn-outline-primary text-nowrap mb-2"
                        role="tooltip"
                        data-bs-toggle="tooltip"
                        data-bs-placement="bottom"
                        data-bs-delay='{"show":600,"hide":100}'
                        title="Выбрать все"
                        id="select-all-to-print"
                >
                    Выбрать все
                </button>

                <a
                        class="btn btn-sm btn-outline-primary text-nowrap mb-2 d-none"
                        role="tooltip"
                        data-bs-placement="bottom"
                        data-bs-delay='{"show":600,"hide":100}'
                        title="Печать стикеров заказа для выбранных"
                        id="add-all-to-print"

                        data-bs-toggle="modal"
                        data-bs-target="#modal"

                        data-post-class="add-all-to-print"

                        data-method="post"
                        data-collection-form="collection"
                        data-formname="{{ add_selected_form_name }}"
                        href="{{ path('wildberries-package:admin.package.print.selected.order', { print: true }) }}"

                >
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-printer-fill" viewBox="0 0 16 16">
                        <path d="M5 1a2 2 0 0 0-2 2v1h10V3a2 2 0 0 0-2-2zm6 8H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1"/>
                        <path d="M0 7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-2a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v2H2a2 2 0 0 1-2-2zm2.5 1a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1"/>
                    </svg> &nbsp; Печать стикеров заказа для выбранных
                </a>

            </div>
        {% endif %}

        {% include Template('_includes/'~baks_settings.device~'/pagination.html.twig') with { 'pagination' : query } %}

    </section>

</main>
